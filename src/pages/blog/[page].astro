---
import BaseLayout from "@/layouts/BaseLayout.astro";
import PostList from "@/components/PostList.astro";
import { getBlogPosts } from "@/lib/ghost";
import { Button } from "@nextui-org/react";
import { ChevronLeft, ChevronRight } from "lucide-react";

export const prerender = true;

export async function getStaticPaths({ paginate }) {
	const allPosts = await getBlogPosts({
		title: true,
		slug: true,
		feature_image: true,
		excerpt: true,
		published_at: true,
	});
	const pageSize = 4;

	return paginate(allPosts, { pageSize });
}

interface PageData {
	data: any;
	page: any;
}

const { page } = Astro.props as PageData;
---

<BaseLayout
	title="Archive"
	description="Archive of all posts on Kafkaesque Blog"
>
	<div class="max-w-4xl px-4">
		<h1 class="font-bold text-7xl">Blog</h1>
		<p class="my-3 mb-8 text-2xl font-semibold text-muted-foreground">
			All my writing in one place.
		</p>
		<PostList posts={page.data} />
		<nav aria-label="Pagination" class="flex w-full mt-8">
			{
				page.url.prev ? (
					<a
						href={page.url.prev}
						class="pagination-previous"
						rel="prev"
					>
						<Button
							variant="bordered"
							className="border no-underline rounded shadow p-2"
						>
							<ChevronLeft className="mr-2 h-4 w-4" />
							Previous Page
						</Button>
					</a>
				) : (
					<span class="flex-grow" />
				)
			}
			{
				page.url.next && (
					<a
						href={page.url.next}
						class="ml-auto pagination-next"
						rel="next"
					>
						<Button
							variant="bordered"
							className="border no-underline rounded shadow p-2"
						>
							Next Page
							<ChevronRight className="ml-2 h-4 w-4" />
						</Button>
					</a>
				)
			}
		</nav>
	</div>
</BaseLayout>
