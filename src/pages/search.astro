---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SearchBox from "@/components/Search";
---

<BaseLayout
	title="Search - Jacob Weinbren"
	description="Search through articles and projects"
>
	<div class="bg-green-500 text-white py-12">
		<div class="max-w-4xl mx-auto px-4 text-center">
			<h1 class="text-5xl font-bold mb-4">Search</h1>
			<p class="text-xl text-white/80">
				Find articles, projects, and more
			</p>
		</div>
	</div>

	<div class="max-w-4xl mx-auto px-4 py-8">
		<SearchBox client:only="react" />
	</div>
</BaseLayout>
