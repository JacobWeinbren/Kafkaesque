---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SearchBox from "@/components/Search";
---

<BaseLayout title={`Search`} description="Search Kafkaesque Blog">
	<div class="w-screen max-w-4xl px-4">
		<h1 class="text-4xl">Search</h1>
		<p class="mt-3 mb-8 text-2xl text-muted-foreground">
			Look through my blog posts
		</p>
		<div id="search-results"></div>
		<SearchBox client:only="react" />
	</div>
</BaseLayout>
