---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import { getBlogPosts } from "@/lib/ghost";
import { Button } from "@/components/ui/button";
import { ChevronLeft } from "lucide-react";

export const prerender = true;

export async function getStaticPaths() {
	const posts = await getBlogPosts({
		title: true,
		slug: true,
		id: true,
		reading_time: true,
		feature_image: true,
		html: true,
		excerpt: true,
		published_at: true,
	});
	return posts.map((post) => {
		return {
			params: {
				slug: post.slug,
			},
			props: {
				post: post,
			},
		};
	});
}

const { post } = Astro.props;
---

<BaseLayout
	title={`Kafkaesque Blog - ${post.title}`}
	description={post.excerpt}
	image={post.feature_image}
>
	<article class="relative max-w-4xl">
		<a href="/blog">
			<Button
				variant="ghost"
				className="absolute left-[-200px] hidden xl:inline-flex"
			>
				<ChevronLeft className="mr-2" strokeWidth={1} />See all posts
			</Button>
		</a>

		<div>
			<p class="text-sm text-muted-foreground">
				Published on {
					new Date(post.published_at).toLocaleDateString("en-UK", {
						year: "numeric",
						month: "long",
						day: "numeric",
					})
				}
			</p>

			<h1
				class="mt-2 inline-block font-heading text-4xl leading-tight lg:text-5xl"
			>
				{post.title}
			</h1>
		</div>

		<Image
			src={post.feature_image}
			alt={post.title}
			width={800}
			height={400}
			class="my-8 rounded-md border bg-muted object-cover w-[800px] h-[400px]"
		/>

		<div class="prose max-w-4xl dark:prose-invertAd" set:html={post.html} />
	</article>
</BaseLayout>
