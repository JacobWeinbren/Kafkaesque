---
// src/pages/about.astro
import BaseLayout from "@/components/layout/BaseLayout.astro";
import {
	AcademicCapIcon,
	ChevronRightIcon,
	EnvelopeIcon,
	ChartBarIcon,
	MapIcon,
	LanguageIcon,
} from "@heroicons/react/24/outline";
import { FaGithub, FaLinkedin } from "react-icons/fa";

const skills = {
	development: [
		"Modern Web Frameworks (Next.js, React, Svelte, Astro)",
		"Cloud Services (AWS Certified)",
		"Full Stack Development & WordPress",
		"Docker & Database Management",
	],
	specialisations: [
		"Geographic Information Systems",
		"Spatial Data Science",
		"Environmental Remote Sensing",
		"Open Source GIS Solutions",
	],
	projects: [
		{
			title: "Canadian Census 2021 Visualisation",
			description:
				"Built an interactive visualisation of census data covering 2.5 million buildings and 2,500 variables using Redis map server technology, receiving recognition from MountainMath CEO.",
			icon: ChartBarIcon,
		},
		{
			title: "UK Electoral Analysis",
			description:
				"Created visualisations revealing correlations between deprivation indices and voting patterns, receiving recognition from Financial Times Political Editor and Professor Rob Ford.",
			icon: MapIcon,
		},
		{
			title: "Hebrew Learning Platform",
			description:
				"Coordinated an international team implementing neural networks for Hebrew transliteration, developing over 4,000 interactive learning resources.",
			icon: LanguageIcon,
		},
	],
	education: {
		current: "MSc Geographic Information Science - University of Exeter",
		certification: "AWS Certified Cloud Practitioner",
		focus: "Drone Analysis, Geo-Visualisations, and Spatial Data Science",
	},
};
---

<BaseLayout
	title="About - Jacob Weinbren"
	description="GIS Specialist & Full Stack Developer | AWS Certified"
>
	<!-- Hero Section -->
	<div class="relative overflow-hidden">
		<div
			class="absolute inset-0 bg-gradient-to-br from-green-400 to-green-600"
		>
		</div>
		<div class="absolute inset-0 bg-grid-pattern opacity-10"></div>

		<div class="relative max-w-4xl mx-auto px-6 py-24 animate-slide-up">
			<h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
				About Me
			</h1>
			<p class="text-xl md:text-2xl text-white/90 max-w-2xl">
				Combining expertise in Geographic Information Systems with Full
				Stack Development to create innovative spatial data solutions.
			</p>
		</div>
	</div>

	<!-- Main Content -->
	<div class="max-w-4xl mx-auto px-6 py-16">
		<div class="space-y-12">
			<!-- Education Section -->
			<section
				class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100"
			>
				<div class="flex items-center gap-3 mb-6">
					<AcademicCapIcon className="w-8 h-8 text-green-500" />
					<h2 class="text-3xl font-bold text-gray-900">
						Current Focus
					</h2>
				</div>
				<div class="space-y-4">
					<p class="text-xl font-semibold text-green-600">
						{skills.education.current}
					</p>
					<p class="text-gray-700">{skills.education.focus}</p>
					<p class="text-gray-700 font-medium">
						{skills.education.certification}
					</p>
				</div>
			</section>

			<!-- Skills Grid -->
			<section class="grid md:grid-cols-2 gap-8">
				<div
					class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100
          transform hover:shadow-md transition-all duration-300"
				>
					<h3 class="text-xl font-bold mb-6">Development</h3>
					<ul class="space-y-3">
						{
							skills.development.map((skill) => (
								<li class="flex items-center gap-2 text-gray-700">
									<ChevronRightIcon className="w-5 h-5 text-green-500" />
									{skill}
								</li>
							))
						}
					</ul>
				</div>

				<div
					class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100
          transform hover:shadow-md transition-all duration-300"
				>
					<h3 class="text-xl font-bold mb-6">GIS Expertise</h3>
					<ul class="space-y-3">
						{
							skills.specialisations.map((skill) => (
								<li class="flex items-center gap-2 text-gray-700">
									<ChevronRightIcon className="w-5 h-5 text-green-500" />
									{skill}
								</li>
							))
						}
					</ul>
				</div>
			</section>

			<!-- Projects -->
			<section
				class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100"
			>
				<h2 class="text-3xl font-bold text-green-600 mb-6">
					Featured Projects
				</h2>
				<div class="grid gap-6">
					{
						skills.projects.map((project) => {
							const Icon = project.icon;
							return (
								<div
									class="group p-6 rounded-xl border border-gray-100 hover:border-green-500 
                    hover:shadow-md transition-all duration-300"
								>
									<div class="flex items-start gap-4">
										<Icon className="w-6 h-6 text-green-500 flex-shrink-0" />
										<div>
											<h3
												class="text-xl font-bold text-gray-900 group-hover:text-green-600 
                           transition-colors duration-300"
											>
												{project.title}
											</h3>
											<p class="mt-2 text-gray-700">
												{project.description}
											</p>
										</div>
									</div>
								</div>
							);
						})
					}
				</div>
			</section>

			<!-- Contact Section -->
			<section
				class="bg-gradient-to-br from-green-500 to-green-600 rounded-2xl p-8 text-white"
			>
				<h2 class="text-3xl font-bold mb-6">Get in Touch</h2>
				<p class="text-white/90 mb-8 text-lg">
					Interested in collaborating on GIS projects or web
					development? I specialise in combining spatial analysis with
					modern web technologies and am open to new opportunities in
					these areas.
				</p>
				<div class="flex flex-wrap gap-4">
					<a
						href="mailto:jacobweinbren@gmail.com"
						class="inline-flex items-center px-6 py-3 rounded-lg bg-white text-green-600
             font-medium hover:bg-green-50 transition-all duration-300"
					>
						<EnvelopeIcon className="w-5 h-5 mr-2" />
						Email Me
					</a>
					<a
						href="https://github.com/JacobWeinbren"
						target="_blank"
						rel="noopener noreferrer"
						class="inline-flex items-center px-6 py-3 rounded-lg bg-white/10 text-white
             font-medium hover:bg-white/20 transition-all duration-300"
					>
						<FaGithub className="w-5 h-5 mr-2" />
						GitHub
					</a>
					<a
						href="https://www.linkedin.com/in/jacob-weinbren/"
						target="_blank"
						rel="noopener noreferrer"
						class="inline-flex items-center px-6 py-3 rounded-lg bg-white/10 text-white
             font-medium hover:bg-white/20 transition-all duration-300"
					>
						<FaLinkedin className="w-5 h-5 mr-2" />
						LinkedIn
					</a>
				</div>
			</section>
		</div>
	</div>
</BaseLayout>
