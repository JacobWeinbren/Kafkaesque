---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import { getPosts } from "@/lib/ghost";

const posts = await getPosts();
---

<BaseLayout 
    title="Blog - Jacob Weinbren"
    description="Articles and thoughts on development, data, and more"
>
    <div class="bg-green-500 py-12 md:py-16">
        <div class="max-w-4xl mx-auto px-4">
            <h1 class="text-4xl md:text-5xl font-bold text-white">Blog</h1>
            <p class="text-white/80 text-lg md:text-xl mt-4">
                Thoughts on development, data, and more
            </p>
        </div>
    </div>

    <div class="max-w-4xl mx-auto px-4 py-12 md:py-16">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {posts.map(post => (
                <a href={`/post/${post.slug}`} class="group">
                    <article class="bg-white rounded-lg shadow-sm overflow-hidden border border-gray-100 flex flex-col h-[400px]"> <!-- Reduced height -->
                        {post.feature_image && (
                            <div class="h-[200px]"> <!-- Reduced height -->
                                <Image
                                    src={post.feature_image}
                                    alt={post.title}
                                    width={600}
                                    height={300}
                                    class="w-full h-full object-cover"
                                />
                            </div>
                        )}
                        <div class="p-4 flex flex-col flex-grow">
                            <time class="text-sm text-gray-500">
                                {new Date(post.published_at).toLocaleDateString("en-GB", {
                                    day: "numeric",
                                    month: "long",
                                    year: "numeric"
                                })}
                            </time>
                            <h2 class="text-lg font-bold mt-2 mb-2 group-hover:text-green-600 line-clamp-2">
                                {post.title}
                            </h2>
                            <p class="text-gray-600 text-sm line-clamp-3">
                                {post.excerpt}
                            </p>
                        </div>
                    </article>
                </a>
            ))}
        </div>
    </div>
</BaseLayout>

<style>
    /* Ensure consistent card heights */
    article {
        max-height: 350px;
    }
    
    /* Ensure consistent image heights */
    .h-[200px] {
        height: 200px;
    }
</style>
