---
import BaseLayout from "@/components/layout/BaseLayout.astro";
import {
	PresentationChartBarIcon,
	BuildingOfficeIcon,
	ArrowTrendingUpIcon,
	BookOpenIcon,
	UserGroupIcon,
	ComputerDesktopIcon,
} from "@heroicons/react/24/outline";

const projects = [
	{
		title: "UK General Election Visualisation",
		description: [
			"An interactive visualisation that applies ecological regression analysis to uncover subtle correlations between deprivation levels and voting patterns in the recent UK general election.",
			"Built using Python and state-of-the-art mapping tools, the project received acclaim from prominent political analysts and academic experts.",
		],
		icon: ArrowTrendingUpIcon,
		date: "2024-07",
		tags: ["GIS", "Data Analysis", "Mapping", "Python"],
		link: "https://kafkaesque.blog/post/deprivation-and-the-2024-ge",
	},
	{
		title: "Canadian Census 2021 Visualisation",
		description: [
			"A dynamic, data‑driven web application that visualises extensive census data from over 2.5 million buildings and 2,500 variables.",
			"Leveraging Redis as a high-speed map server with a JavaScript‑powered front end, it has earned recognition from industry leaders.",
		],
		icon: PresentationChartBarIcon,
		date: "2024-06",
		tags: ["GIS", "Visualisation", "Redis"],
		link: "https://github.com/JacobWeinbren/Canadian-Census",
	},
	{
		title: "MP Campaign Site",
		description: [
			"A modern, responsive campaign website developed with Astro for a UK parliamentary candidate.",
			"The site is built to ensure cross-device compatibility, SEO optimisation, and strict adherence to political branding guidelines.",
		],
		icon: BuildingOfficeIcon,
		date: "2024-06",
		tags: ["Web Development", "Astro", "SEO"],
		link: "https://github.com/JacobWeinbren/Emily4MK",
	},
	{
		title: "Hebrew Learning Platform",
		description: [
			"An innovative educational platform that integrates interactive flashcards with advanced neural transliteration to facilitate Hebrew language learning.",
			"Developed by a global team, it improves accessibility by automating transliteration and offering over 4,000 interactive flashcards.",
		],
		icon: BookOpenIcon,
		date: "2024-01",
		tags: ["Web Dev", "Machine Learning", "Education"],
		link: "https://kafkaesque.blog/post/complete-duolingo-hebrew-set",
	},
	{
		title: "Israeli Elections Visualisation",
		description: [
			"An updated interactive visualisation that maps and analyses recent Israeli election results to highlight socio‑political trends.",
			"It employs advanced data analytics and responsive cartographic design to provide insights that informed key stakeholders.",
		],
		icon: UserGroupIcon,
		date: "2022-06",
		tags: ["GIS", "Data Analysis", "Mapping"],
		link: "https://kafkaesque.blog/post/updated-israel-map",
	},
	{
		title: "Personal Portfolio Website",
		description: [
			"The inaugural version of my personal portfolio website, built using Astro and Tailwind CSS, documents my journey in web development and GIS.",
			"Serving as both a blog and a professional platform, it features my insights on literature, technology, and politics.",
		],
		icon: ComputerDesktopIcon,
		date: "2022-05",
		tags: ["Web Development", "Astro", "Tailwind"],
		link: "https://github.com/JacobWeinbren/Kafkaesque",
	},
];

projects.sort((a, b) => (a.date < b.date ? 1 : -1));
---

<BaseLayout
	title="Portfolio – Jacob Weinbren"
	description="A selection of recent work in web development and GIS."
>
	<!-- Hero Section -->
	<section class="py-24 bg-gradient-to-br from-gray-50 to-gray-100">
		<div class="max-w-7xl mx-auto px-4 text-center">
			<span
				class="inline-block px-4 py-1.5 bg-green-100 text-green-700 tracking-wide mb-4 rounded-full font-medium"
				>MY WORK</span
			>
			<h1
				class="text-5xl md:text-6xl font-bold text-gray-900 font-display"
			>
				Projects
			</h1>
			<p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
				A selection of recent work in web development and geospatial
				data visualisation.
			</p>
		</div>
	</section>

	<!-- Projects Grid -->
	<section class="py-16 bg-white">
		<div class="max-w-7xl mx-auto px-4">
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
				{
					projects.map((project) => (
						<a
							href={project.link}
							target="_blank"
							rel="noopener noreferrer"
							class="group transition-all duration-300"
						>
							<div class="card h-full hover:scale-105 hover:shadow-xl transition-all duration-300 bg-white flex flex-col relative overflow-hidden">
								<div class="absolute top-0 right-0 bg-green-100 text-green-800 px-3 py-1 text-xs font-medium rounded-bl-lg">
									{project.date}
								</div>
								<div class="flex items-center mb-5 pt-4">
									<div class="w-12 h-12 flex items-center justify-center rounded-lg bg-green-50 text-green-600 mr-4 group-hover:bg-green-100 transition-colors">
										<project.icon className="w-6 h-6" />
									</div>
									<h2 class="text-xl font-semibold text-gray-800 group-hover:text-green-700 transition-colors">
										{project.title}
									</h2>
								</div>
								<div class="mb-5 text-gray-600 space-y-2 flex-grow">
									{project.description.map((desc) => (
										<p>{desc}</p>
									))}
								</div>
								<div class="flex flex-wrap gap-2 mb-4">
									{project.tags.map((tag) => (
										<span class="px-3 py-1 bg-green-50 text-green-700 rounded-full text-sm font-medium">
											{tag}
										</span>
									))}
								</div>
							</div>
						</a>
					))
				}
			</div>
		</div>
	</section>
</BaseLayout>
