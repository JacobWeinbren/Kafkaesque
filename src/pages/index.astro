---
import BaseLayout from "@/components/layout/BaseLayout.astro";
import {
	DocumentIcon,
	BriefcaseIcon,
	RssIcon,
} from "@heroicons/react/24/outline";
---

<BaseLayout
	title="Jacob Weinbren"
	description="Professional full‑stack web developer & GIS specialist."
>
	<!-- Hero Section -->
	<section
		class="relative flex items-center justify-center min-h-[50vh] bg-gradient-to-br from-green-600 to-green-800 text-white"
	>
		<div class="relative z-10 text-center">
			<h1
				class="text-5xl md:text-6xl font-bold mb-4 animate-fade-in-fast"
			>
				Jacob Weinbren
			</h1>
			<p class="text-xl md:text-2xl max-w-2xl mx-auto animate-pop-up">
				Professional full‑stack web developer &amp; GIS specialist.
			</p>
		</div>
	</section>

	<!-- Navigation Grid -->
	<section class="py-16 bg-white">
		<div class="max-w-7xl mx-auto px-4 text-center">
			<h2 class="text-3xl font-bold text-gray-900 mb-8">
				Navigate My World
			</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				<a
					href="/Jacob Weinbren - Resume.pdf"
					download
					class="card transition transform hover:scale-105 hover:shadow-2xl"
				>
					<DocumentIcon
						className="h-12 w-12 text-green-600 mx-auto mb-4"
					/>
					<h3 class="text-xl font-semibold text-gray-800">CV</h3>
					<p class="text-gray-600 mt-2">
						Download my professional resume.
					</p>
				</a>
				<a
					href="/portfolio"
					class="card transition transform hover:scale-105 hover:shadow-2xl"
				>
					<BriefcaseIcon
						className="h-12 w-12 text-green-600 mx-auto mb-4"
					/>
					<h3 class="text-xl font-semibold text-gray-800">
						Portfolio
					</h3>
					<p class="text-gray-600 mt-2">
						Explore my projects and experience.
					</p>
				</a>
				<a
					href="/blog"
					class="card transition transform hover:scale-105 hover:shadow-2xl"
				>
					<RssIcon
						className="h-12 w-12 text-green-600 mx-auto mb-4"
					/>
					<h3 class="text-xl font-semibold text-gray-800">Blog</h3>
					<p class="text-gray-600 mt-2">
						Read my insights on technology and GIS.
					</p>
				</a>
			</div>
		</div>
	</section>

	<!-- Contact Section -->
	<section class="py-16 bg-gray-100 text-center">
		<div class="max-w-5xl mx-auto px-4">
			<h2 class="text-3xl font-bold text-gray-900 mb-4">Let’s Connect</h2>
			<p class="text-gray-600 mb-8">
				Interested in collaborating or need a consultation? Send me a
				message.
			</p>
			<a href="mailto:jacobweinbren@gmail.com" class="btn btn-primary">
				Contact Me
			</a>
		</div>
	</section>
</BaseLayout>
