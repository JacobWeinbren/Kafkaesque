---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Sparkle } from "lucide-react";
---

<BaseLayout title="Jacob Weinbren" description="An introduction to Jacob">
	<script src="https://cdn.lordicon.com/lordicon.js"></script>
	<div class="flex flex-col gap-7 items-center justify-center">
		<h1 class="mt-8 -mb-4 fluid-3xl xs:fluid-5xl font-kafka">
			Jacob Weinbren
		</h1>
		<Sparkle className="lg:invisible" strokeWidth={1.5} />
		<div
			class="grid grid-cols-1 lg:grid-cols-3 gap-7 text-center justify-items-center w-full"
		>
			<div class="flex flex-col items-center lg:order-1">
				<Sparkle
					className="mt-2 mb-6 hidden lg:block"
					strokeWidth={1.5}
				/>
				<p
					class="text-center w-[min(100vw,20rem)] p-2 xxs:text-base xs:text-lg"
				>
					Jacob Weinbren is a coder, blogger, and data storyteller
					from Milton Keynes.
				</p>
			</div>
			<div class="flex flex-col items-center lg:order-3">
				<Sparkle
					className="mt-2 mb-6 hidden lg:block"
					strokeWidth={1.5}
				/>
				<p
					class="w-[min(100vw,20rem)] p-2 text-center xxs:text-base xs:text-lg"
				>
					Jacob is passionate about combining data and technology to
					create meaningful digital experiences.
				</p>
			</div>
			<div class="lg:order-2">
				<lord-icon
					src="https://cdn.lordicon.com/cfkyvikj.json"
					trigger="loop"
					stroke="light"
					colors="primary:#10B981,secondary:#10B981"
					class="w-40 h-40 -mb-4 -mt-7 lg:-mb-6 lg:-mt-10 lg:w-52 lg:h-52"
				>
				</lord-icon>
				<p
					class="w-[min(100vw,20rem)] p-2 text-center xxs:text-base xs:text-lg"
				>
					(Jacob loves turtles)
				</p>
			</div>
		</div>
	</div>
</BaseLayout>
