---
import { ghostClient } from "@/lib/ghost";
import Head from "@/components/Head.astro";

const posts = await ghostClient.posts
	.browse({
		limit: "all",
	})
	.catch((err) => {
		console.error(err);
	});
---

<html lang="en">
	<Head title="Kafkaesque Blog" />
	<body>
		{
			posts.map((post) => (
				<a href={`/post/${post.slug}`}>
					<h1>{post.title}</h1>
				</a>
			))
		}
	</body>
</html>
