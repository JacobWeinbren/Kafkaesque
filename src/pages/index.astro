---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Sparkle } from "lucide-react";
---

<BaseLayout
	title="Jacob Weinbren"
	description="Jacob Weinbren's personal website"
>
	<script src="https://cdn.lordicon.com/lordicon.js"></script>
	<div class="flex flex-col items-center justify-center gap-4 py-4">
		<h1
			class="px-4 mt-8 -mb-4 font-bold leading-[1.3] text-center text-7xl lg:text-9xl font-kafka"
		>
			Jacob Weinbren
		</h1>
		<Sparkle className="lg:invisible" strokeWidth={1.5} />
		<div
			class="grid w-full grid-cols-1 text-center lg:grid-cols-3 gap-4 justify-items-center"
		>
			<div class="flex flex-col items-center lg:order-1">
				<Sparkle
					className="mt-2 mb-6 hidden lg:block"
					strokeWidth={1.5}
				/>
				<p
					class="text-center w-[min(100vw,20rem)] px-4 xxs:text-base xs:text-xl"
				>
					I'm a <strong>coder</strong>, <strong>blogger</strong>, and <strong
						>data storyteller</strong
					>
					from Milton Keynes.
				</p>
			</div>
			<div class="flex flex-col items-center lg:order-3">
				<Sparkle
					className="mt-2 mb-6 hidden lg:block"
					strokeWidth={1.5}
				/>
				<p
					class="w-[min(100vw,20rem)] px-4 text-center xxs:text-base xs:text-xl"
				>
					I'm passionate about <strong
						>combining data and technology</strong
					> to create meaningful digital experiences.
				</p>
			</div>
			<div class="lg:order-2">
				<lord-icon
					src="https://cdn.lordicon.com/cfkyvikj.json"
					trigger="loop"
					stroke="light"
					colors="primary:#10B981,secondary:#10B981"
					class="w-40 h-40 -mb-4 -mt-7 lg:-mb-6 lg:-mt-10 lg:w-52 lg:h-52"
				>
				</lord-icon>
				<p
					class="w-[min(100vw,20rem)] px-4 text-center xxs:text-base xs:text-xl"
				>
					(Jacob loves turtles)
				</p>
			</div>
		</div>
	</div>
</BaseLayout>
