---
import BaseLayout from "@/components/layout/BaseLayout.astro";
import {
	DocumentIcon,
	BriefcaseIcon,
	RssIcon,
	ArrowRightIcon,
} from "@heroicons/react/24/outline";
---

<BaseLayout
	title="Jacob Weinbren"
	description="Professional full‑stack web developer & GIS specialist."
>
	<!-- Hero Section -->
	<section
		class="relative flex items-center justify-center min-h-[85vh] bg-gradient-to-br from-green-600 via-green-500 to-green-700 text-white overflow-hidden"
	>
		<!-- Decorative elements -->
		<div class="absolute inset-0 overflow-hidden">
			<div class="absolute -inset-[10%] opacity-10">
				<svg viewBox="0 0 1000 1000" xmlns="http://www.w3.org/2000/svg">
					<defs>
						<linearGradient
							id="b"
							gradientTransform="rotate(45 .5 .5)"
						>
							<stop offset="0%" stop-color="#FFF"></stop>
							<stop
								offset="100%"
								stop-color="#FFF"
								stop-opacity="0"></stop>
						</linearGradient>
						<clipPath id="a"
							><circle cx="500" cy="500" r="450"
							></circle></clipPath
						>
					</defs>
					<g clip-path="url(#a)">
						<circle
							cx="500"
							cy="500"
							r="450"
							fill="none"
							stroke="url(#b)"
							stroke-width="120"></circle>
						<circle
							cx="500"
							cy="500"
							r="300"
							fill="none"
							stroke="url(#b)"
							stroke-width="100"></circle>
						<circle
							cx="500"
							cy="500"
							r="150"
							fill="none"
							stroke="url(#b)"
							stroke-width="80"></circle>
					</g>
				</svg>
			</div>
		</div>

		<div class="relative z-10 text-center max-w-4xl px-6">
			<span
				class="inline-block px-4 py-1.5 bg-white/10 backdrop-blur-sm text-green-50 tracking-wide mb-4 rounded-full font-medium"
				>WEB DEVELOPER & GIS SPECIALIST</span
			>
			<h1
				class="font-display text-5xl sm:text-6xl md:text-7xl font-bold mb-6 animate-fade-in-fast tracking-tight"
			>
				Jacob Weinbren
			</h1>
			<p
				class="text-xl md:text-2xl max-w-3xl mx-auto mb-8 text-green-50 animate-pop-up leading-relaxed"
			>
				Telling meaningful stories through full‑stack web development
				and geospatial data visualisation.
			</p>
			<div
				class="flex flex-wrap justify-center gap-4 animate-pop-up stagger-2"
			>
				<a
					href="/portfolio"
					class="btn bg-white text-green-700 hover:bg-green-50 shadow-lg hover:shadow-xl transition-all duration-300 inline-flex items-center"
				>
					View My Work
					<ArrowRightIcon className="h-4 w-4 ml-2" />
				</a>
				<a
					href="/blog"
					class="btn bg-green-700/40 backdrop-blur-sm text-white hover:bg-green-700/60 border border-green-500/50 inline-flex items-center"
				>
					Read My Blog
				</a>
			</div>
		</div>
	</section>

	<!-- Navigation Grid -->
	<section class="py-24 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 text-center">
			<h2
				class="text-3xl md:text-4xl font-display font-bold text-gray-900 mb-3"
			>
				Navigate My World
			</h2>
			<p class="text-gray-600 text-lg max-w-2xl mx-auto mb-12">
				Explore my work, expertise, and thoughts on technology and
				spatial data analysis.
			</p>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				<!-- CV/Resume Card -->
				<a
					href="/Jacob Weinbren - Resume.pdf"
					download
					class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col items-center text-center hover:shadow-md transition-shadow duration-300"
				>
					<div
						class="w-16 h-16 flex items-center justify-center rounded-full bg-green-50 mb-5"
					>
						<DocumentIcon className="h-7 w-7 text-green-600" />
					</div>
					<h3
						class="text-xl font-display font-semibold text-gray-800 mb-2"
					>
						CV / Resume
					</h3>
					<p class="text-gray-600 mb-6">
						Download my professional resume and qualifications.
					</p>
					<span
						class="text-green-600 flex items-center text-sm font-medium mt-auto"
					>
						Download
						<svg
							xmlns="http://www.w3.org/2000/svg"
							class="ml-1 w-4 h-4"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
							></path>
						</svg>
					</span>
				</a>

				<!-- Portfolio Card -->
				<a
					href="/portfolio"
					class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col items-center text-center hover:shadow-md transition-shadow duration-300"
				>
					<div
						class="w-16 h-16 flex items-center justify-center rounded-full bg-green-50 mb-5"
					>
						<BriefcaseIcon className="h-7 w-7 text-green-600" />
					</div>
					<h3
						class="text-xl font-display font-semibold text-gray-800 mb-2"
					>
						Portfolio
					</h3>
					<p class="text-gray-600 mb-6">
						Explore my recent projects, case studies, and
						experience.
					</p>
					<span
						class="text-green-600 flex items-center text-sm font-medium mt-auto"
					>
						Browse Projects
						<ArrowRightIcon className="ml-1 w-4 h-4" />
					</span>
				</a>

				<!-- Blog Card -->
				<a
					href="/blog"
					class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col items-center text-center hover:shadow-md transition-shadow duration-300"
				>
					<div
						class="w-16 h-16 flex items-center justify-center rounded-full bg-green-50 mb-5"
					>
						<RssIcon className="h-7 w-7 text-green-600" />
					</div>
					<h3
						class="text-xl font-display font-semibold text-gray-800 mb-2"
					>
						Blog
					</h3>
					<p class="text-gray-600 mb-6">
						Read my insights on technology, GIS, and development.
					</p>
					<span
						class="text-green-600 flex items-center text-sm font-medium mt-auto"
					>
						View Articles
						<ArrowRightIcon className="ml-1 w-4 h-4" />
					</span>
				</a>
			</div>
		</div>
	</section>

	<!-- Contact Section -->
	<section class="py-16 bg-gray-50">
		<div class="max-w-5xl mx-auto px-4">
			<div
				class="bg-white rounded-xl shadow-lg p-8 flex flex-col items-center"
			>
				<h2 class="text-3xl font-bold text-gray-900 mb-4">
					Let's Connect
				</h2>
				<p class="text-gray-600 mb-8 text-center">
					Interested in collaborating or need a consultation? Send me
					a message.
				</p>
				<a
					href="mailto:jacobweinbren@gmail.com"
					class="btn bg-green-600 text-white hover:bg-green-700 transition-colors inline-flex items-center"
				>
					Contact Me
				</a>
			</div>
		</div>
	</section>
</BaseLayout>
