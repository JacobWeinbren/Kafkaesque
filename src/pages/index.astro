---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { ghostClient } from "@/lib/ghost";

const posts = await ghostClient.posts
	.browse({
		limit: "all",
	})
	.catch((err) => {
		console.error(err);
	});
---

<BaseLayout title="Kafkaesque Blog">
	{
		posts.map((post) => (
			<a href={`/post/${post.slug}`}>
				<h1>{post.title}</h1>
			</a>
		))
	}
</BaseLayout>
