---
import {
	FaGithub as GithubIcon,
	FaLinkedin as LinkedInIcon,
} from "react-icons/fa";
import { EnvelopeIcon } from "@heroicons/react/24/outline";
const currentYear = new Date().getFullYear();
---

<!-- src/components/Footer.astro -->
<footer class="bg-gray-50 py-10 border-t border-gray-200">
	<div class="max-w-6xl mx-auto px-4">
		<div
			class="flex flex-col md:flex-row justify-between items-center mb-6"
		>
			<div class="mb-5 md:mb-0">
				<a
					href="/"
					class="flex items-center text-green-800 font-display font-bold text-lg"
				>
					Jacob Weinbren
				</a>
				<p class="text-gray-600 text-sm mt-1 max-w-md">
					GIS specialist and full-stack developer focused on spatial
					data visualisation.
				</p>
			</div>
			<div class="flex flex-col items-center md:items-end">
				<div class="flex space-x-5 mb-3">
					<a
						href="mailto:jacobweinbren@gmail.com"
						class="text-gray-600 hover:text-green-700 transition"
						aria-label="Email"
					>
						<EnvelopeIcon className="w-5 h-5" />
					</a>
					<a
						href="https://github.com/JacobWeinbren"
						target="_blank"
						rel="noopener noreferrer"
						class="text-gray-600 hover:text-green-700 transition"
						aria-label="GitHub"
					>
						<GithubIcon className="w-5 h-5" />
					</a>
					<a
						href="https://www.linkedin.com/in/jacob-weinbren/"
						target="_blank"
						rel="noopener noreferrer"
						class="text-gray-600 hover:text-green-700 transition"
						aria-label="LinkedIn"
					>
						<LinkedInIcon className="w-5 h-5" />
					</a>
				</div>
				<nav class="flex flex-wrap justify-center space-x-5">
					<a
						href="/"
						class="text-gray-600 hover:text-green-700 transition text-sm mb-2"
						>Home</a
					>
					<a
						href="/portfolio"
						class="text-gray-600 hover:text-green-700 transition text-sm mb-2"
						>Portfolio</a
					>
					<a
						href="/blog"
						class="text-gray-600 hover:text-green-700 transition text-sm mb-2"
						>Blog</a
					>
				</nav>
			</div>
		</div>
		<div class="border-t border-gray-200 pt-4 text-center">
			<p class="text-gray-500 text-xs">
				Â© {currentYear} Jacob Weinbren. Built with
				<a
					href="https://astro.build"
					target="_blank"
					rel="noopener noreferrer"
					class="text-green-700 hover:text-green-800 font-medium"
				>
					Astro
				</a>.
			</p>
		</div>
	</div>
</footer>
