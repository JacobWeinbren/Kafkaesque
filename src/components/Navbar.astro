---
const links = [
	{ href: "/", text: "Home" },
	{ href: "/about", text: "About" },
	{ href: "/blog", text: "Blog" },
	{ href: "/search", text: "Search" },
];
---

<nav class="bg-green-500/95 backdrop-blur-sm text-white sticky top-0 z-50">
	<div class="max-w-7xl mx-auto px-6">
		<div class="flex items-center justify-between h-16">
			<a
				href="/"
				class="font-bold text-xl hover:text-white/90 transition-colors"
			>
				Jacob W
			</a>

			<div class="hidden md:flex space-x-8">
				{
					links.map((link) => (
						<a
							href={link.href}
							class="font-medium hover:bg-green-600/80 px-4 py-2 rounded-lg transition-colors duration-200"
						>
							{link.text}
						</a>
					))
				}
			</div>

			<button
				id="menuButton"
				class="md:hidden p-2 hover:bg-green-600/80 rounded-lg transition-colors"
				aria-label="Menu"
			>
				<svg
					class="w-6 h-6"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</button>
		</div>

		<!-- Mobile Menu -->
		<div id="mobileMenu" class="hidden md:hidden pb-4">
			{
				links.map((link) => (
					<a
						href={link.href}
						class="block px-3 py-2 rounded-md hover:bg-green-600 snap"
					>
						{link.text}
					</a>
				))
			}
		</div>
	</div>
</nav>

<script>
	const menuButton = document.getElementById("menuButton");
	const mobileMenu = document.getElementById("mobileMenu");

	menuButton?.addEventListener("click", () => {
		mobileMenu?.classList.toggle("hidden");
	});
</script>
